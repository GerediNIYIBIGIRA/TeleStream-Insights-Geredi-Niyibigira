# TeleStream Insights Hub - Environment Variables
# Copy this file to .env and update with your actual values

# ==================== DATABASE ====================
DB_HOST=localhost
DB_PORT=5432
DB_USER=telestream
DB_PASSWORD=your_secure_password_here
DB_NAME=telestream_dw
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# ==================== REDIS ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# ==================== KAFKA ====================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=telestream
KAFKA_CONSUMER_GROUP=telestream_processors
KAFKA_AUTO_OFFSET_RESET=earliest

# ==================== API ====================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==================== DATA STORAGE ====================
DATA_LAKE_PATH=/data/lake
DATA_LAKE_RAW=/data/lake/raw
DATA_LAKE_PROCESSED=/data/lake/processed
DATA_LAKE_CURATED=/data/lake/curated
DATA_WAREHOUSE_PATH=/data/warehouse

# Cloud Storage (Optional - uncomment if using AWS S3)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET=telestream-data-lake

# ==================== AIRFLOW ====================
AIRFLOW_HOME=./airflow
AIRFLOW__CORE__DAGS_FOLDER=./orchestration
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://telestream:telestream123@localhost:5432/airflow

# ==================== SPARK ====================
SPARK_MASTER=local[*]
SPARK_DRIVER_MEMORY=4g
SPARK_EXECUTOR_MEMORY=4g
SPARK_SQL_WAREHOUSE_DIR=/data/spark-warehouse

# ==================== MONITORING ====================
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_METRICS=true
METRICS_PORT=9090

# Sentry (Optional - for error tracking)
# SENTRY_DSN=your_sentry_dsn_here

# ==================== FEATURE FLAGS ====================
ENABLE_STREAMING=true
ENABLE_BATCH=true
ENABLE_ML_FEATURES=false
ENABLE_REAL_TIME_ANALYTICS=true

# ==================== SECURITY ====================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ==================== EXTERNAL SERVICES ====================
# OpenAI (for ML features)
# OPENAI_API_KEY=your_openai_key

# SendGrid (for email notifications)
# SENDGRID_API_KEY=your_sendgrid_key
# FROM_EMAIL=noreply@telestream.com

# Slack (for alerts)
# SLACK_WEBHOOK_URL=your_slack_webhook_url

# ==================== DEVELOPMENT ====================
DEBUG=false
TESTING=false
ENVIRONMENT=development